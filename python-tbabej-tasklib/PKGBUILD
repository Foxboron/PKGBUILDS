# Maintainer: Morten Linderud <morten@linderud.pw>  

pkgname="python-tbabej-tasklib"
_pkgname="tasklib"
pkgver=r422.e75e49f
pkgrel=1
pkgdesc='A Python module to make simple GUIs with Rofi'
url='https://github.com/bcbnz/python-rofi'
arch=('any')
license=('BSD')
depends=('python' 'python-six' 'python-pytz' 'python-tzlocal')
makedepends=('python-setuptools')
source=("git+https://github.com/tbabej/tasklib#branch=develop")
sha256sums=('SKIP')

pkgver() {
  cd "${_pkgname}"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "${srcdir}/${_pkgname}"
  python setup.py build
}

package() {
  cd "${srcdir}/${_pkgname}"
  python setup.py install --root="${pkgdir}/" --optimize=1 --skip-build
  install -Dm 644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

# vim:set ft=sh ts=2 sw=2 et:
